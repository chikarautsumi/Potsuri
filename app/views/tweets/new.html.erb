<div id="article">
    <%= form_with model: @tweet, local: true, url: confirm_tweets_path  do |form| %>
        <ul class="error_message">
            <% @tweet.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
        <%= form.label :content %>
        <div class="tweet_text_box">
            <%= form.text_area :content, size: "135x25" %>
        </div>
        <%= form.submit %>
    <% end %>
</div>